{
    "manifest_version": 2,
    "name": "Keyword Blocker",
    "version": "1.0",
    "description": "Automatically closes tabs containing specific keywords.",
    "permissions": ["tabs", "storage"],
    "options_page": "options.html",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  